<!DOCTYPE html>
<html lang="en">
<%- include("header"); %>


    <%- include("navbar"); %>

        <% title %>
            <form action="/process" method="post">

                <div class="col form-group" style="padding-bottom: 15px">
                    <label for="firstName">First Name</label>
                    <input type="input" name="firstName" id="firstName" class="form-control  form-control-lg" />
                </div>

                <div class="col form-group" style="padding-bottom: 15px">
                    <label for="lastName">Last Name</label>
                    <input type="input" name="lastName" id="lastName" class="form-control  form-control-lg" />
                </div>

                <div class="form-group" style="padding-bottom: 15px">
                    <label for="empID">Employee Number:</label>
                    <input type="text" class="form-control" id="empID" name="empID" />
                </div>

                <div class="form-group" style="padding-bottom: 15px">
                    <label for="empTitle">Employee Title:</label>
                    <input type="text" class="form-control" id="empTitle" name="empTitle" />
                </div>

                <input name="_csrf" value="<%= csrfToken %>" type="hidden">
                <button type="submit" class="btn btn-primary" style="padding: 5px">ADD</button>

            </form>

</html>
